# Written by Hansol "LumberKing" Lee

namespace = SoH

### Eunuchs

# Introduce Eunuch?
character_event = {
	id = SoH.800
	desc = EVTDESCSoH.800
	picture = GFX_evt_emissary_byzantine
	
	capable_only = yes
	prisoner = no
	only_playable = yes
	min_age = 16
	
	trigger = {
		has_dlc = "Legacy of Rome"
		has_landed_title = e_china
		NOT = {
			any_courtier = { has_minor_title = title_imperial_eunuch }
		}
		NOT = { trait = in_hiding }
	}
	
	mean_time_to_happen = {
		months = 300
	}
	
	option = {
		name = EVTOPTASoH.800
		custom_tooltip = {
			text = introduce_eunuch
			hidden_tooltip = {
				random_list = {
					20 = { character_event = { id = SoH.801 } }
					20 = { character_event = { id = SoH.802 } }
					20 = { character_event = { id = SoH.803 } }
					20 = { character_event = { id = SoH.804 } }
					20 = { character_event = { id = SoH.805 } }
				}
			}
		}
	}
	option = {
		name = EVTOPTBSoH.800
		custom_tooltip = { text = no_to_eunuchs }
	}
}

# Martial Eunuch
character_event = {
	id = SoH.801
	desc = EVTDESCSoH.801
	picture = GFX_evt_emissary_byzantine
	
	hide_from = yes
	
	is_triggered_only = yes
	
	option = {
		name = EVTOPTASoH.801
		create_character = {
			random_traits = no
			dynasty = NONE
			female = no
			age = 20
			religion = ROOT
			culture = ROOT
			trait = eunuch
			trait = diligent
			trait = quick
			trait = brave
			trait = brilliant_strategist
			attributes = {
				martial = 10
			}
		}
		new_character = {
			give_minor_title = title_imperial_eunuch
		}
	}
}

